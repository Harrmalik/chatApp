<!doctype html>
<html ng-app="chatApp">
	<head>
    <title>Cartoon Chat App</title>
    <!--                            SCRIPT FILES                                                         -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-resource.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.12.3/semantic.min.js"></script>
    
    <!--                            CSS FILES                                                         -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.12.3/semantic.min.css">
    <link rel="stylesheet" href="css/style.css">
	</head>
	<body>
		<div id='main'>
			 <header class="ui sixteen wide column" ng-controller="navController as NavCtrl">
			   <nav class="ui secondary pointing menu blue floating" ng-controller="authController">
          <a class="item" href="#" ng-class="{ active : isSelected('index')}" ng-click="selectedPage('index')">
            <i class="home icon"></i> Home
          </a>
          <a class="item" href="#/inbox" ng-class="{ active : isSelected('inbox')}" ng-click="selectedPage('inbox')">
            <i class="mail icon"></i> Inbox
          </a>
          <a class="item" href="#/friends" ng-class="{ active : isSelected('friends')}" href ng-click="selectedPage('friends')">
            <i class="user icon"></i> Friends
          </a>
          
          <nav class="right secondary menu">
            <a class="item" href="#/login" ng-hide="authenticated" ng-class="{ active : isSelected('login')}" ng-click="selectedPage('login')">
              <i class="mail icon"></i> Login
            </a>
            <a class="item" href="#/register" ng-hide="authenticated" ng-class="{ active : isSelected('register')}" ng-click="selectedPage('register')">
              <i class="user icon"></i> Register
            </a>
            <a class="item" href ng-click="signout()" ng-show="authenticated">
              <i class="user icon"></i> Logout
            </a>
            <a class="item" href="#/settings" ng-show="authenticated" ng-class="{ active : isSelected('settings')}" ng-click="selectedPage('settings')">
              <i class="user icon"></i> Settings
            </a>
          </nav>
        </nav>
      </header>
      
			<section ng-view class="ui grid" ng-controller="postsController">
			</section>
		</div>
		<!--                            SCRIPT FILES                                                         -->
    <script src="js/main.js"></script>
    
    <!--                            CONTROLLERS                                                         -->
    <script src="js/chatApp.js"></script>
    <script src="js/services/services.js"></script>
    <script src="js/controllers/authenticate.js"></script>
    <script src="js/controllers/settings.js"></script>
    <script src="js/controllers/posts.js"></script>
	</body>
</html>
